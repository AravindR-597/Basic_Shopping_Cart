<section>
    <div class="container ">
        <div class="row mt-4">
            <a class="btn btn-success ml-auto" href="/admin/addproduct">Add Product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">Product Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th scope="col"class="text-center">Edit / Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>Rs {{this.price}}</td>
      <td><img style="width: 50px;height:50px;" src="/product_images/{{this._id}}.jpg" alt=""></td>
      <td class="text-center">
      <a href="/admin/edit/{{this._id}}" class="btn btn-warning">Edit</a>
      <a href="/admin/delete/{{this._id}}" class="btn btn-danger" onclick="return confirm('Required Confirmation for Deleting {{this.Name}}.')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>