<section>
    <div class="container mt-4">
        <form  action="" id="checkout_form" method="POST">
            <div class="row">
                <div class="col-md-6 border border-dark rounded">
                    <br>
                    <h3 class="text-center">Enter Delivery Address</h3>
                    <br>
                    <div>
                        <div class="input-group ml-1">

                            <input class="form-control mr-2" type="text" name="firstName" id="first_name"
                                placeholder="First Name">
                            <input class="form-control mr-2" type="text" name="lastName" id="last_name"
                                placeholder="Last Name">
                        </div>
                        <br>
                        <div class="input-group ml-1">
                            <input class="form-control  mr-2" type="text" name="pincode" id="pincode"
                                placeholder="Pincode">
                            <input class="form-control mr-2" type="text" name="locality" id="locality"
                                placeholder="Locality">
                        </div>
                        <br>
                        <input class="form-control" type="text" name="address" id="address" placeholder="Address"
                            style="height:100px">
                        <br>
                        <div class="input-group ml-1">
                            <input class="form-control mr-2" type="text" name="place" id="place"
                                placeholder="City/District/Town">
                            <input class="form-control mr-2" type="text" name="state" id="state" placeholder="State">
                        </div>
                        <br>
                        <div class="input-group ml-1">
                            <input class="form-control mr-2" type="text" name="landmark" id="landmark"
                                placeholder="Landmark">
                            <input class="form-control mr-2" type="text" name="mobile" id="mobile" placeholder="Mobile">
                        </div>
                    </div>
                    <input type="text" name="userId" id="user-id" value="{{user._id}}" hidden>
                    <br> <br>    
                </div>
                <div class="col-md-6">
                    <div class="container mt-5  ml-3">
                        <br><br>
                        <div class="card border-dark">
                            <h5 class="card-header text-right">Total Amount:Rs {{total}}</h5>
                            <div class="card-body">
                                <h4>Payment Options</h4>
                                <br>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="payment-method"
                                         value="COD" checked>
                                    <label class="form-check-label">
                                       COD (Cash On Delivery)
                                    </label>
                                    <br>
                                    <br>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="payment-method"
                                         value="Online Payment">
                                    <label class="form-check-label">
                                        Online Payment
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-success float-right mr-2">Checkout</button>
                            </div>
                        </div>
                    </div>
                </div>
        </form>
    </div>
</section>
