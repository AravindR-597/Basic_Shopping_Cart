<section>
    <div class="container mt-4">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width:15rem;height:23rem;">
                    <img class="card-img-top" style="width: 180px;height:180px" src="/product_images/{{this._id}}.jpg"
                        alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <h3 class="card-text">Rs {{this.price}}</h3>
                        <a href="#" class="btn btn-primary ">Add to Cart</a>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</section>